{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}